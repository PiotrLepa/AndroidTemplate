<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    >

  <TextView
      android:id="@+id/postId"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:fontFamily="@font/lato_black"
      android:gravity="center"
      android:padding="16dp"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="1"
      />

  <TextView
      android:id="@+id/postTitle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:fontFamily="@font/lato_bold"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/postId"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="at nam consequatur ea labore ea harum"
      />

  <TextView
      android:id="@+id/postBody"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:fontFamily="@font/lato_regular"
      android:textSize="14sp"
      app:layout_constraintEnd_toEndOf="@id/postTitle"
      app:layout_constraintStart_toStartOf="@id/postTitle"
      app:layout_constraintTop_toBottomOf="@id/postTitle"
      tools:text="cupiditate quo est a modi nesciunt soluta\nipsa voluptas error itaque dicta in\nautem qui minus magnam et distinctio eum\naccusamus ratione error aut"
      />

</androidx.constraintlayout.widget.ConstraintLayout>